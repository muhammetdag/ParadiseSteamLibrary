{
  "name": "paradise-steam-library",
  "version": "2.1.1",
  "description": "Paradise Steam Library",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-portable": "electron-builder --win portable",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "generate-icons": "electron-icon-builder --input=src/pdlogo.png --output=src --flatten"
  },
  "keywords": [
    "steam",
    "games",
    "library",
    "manager",
    "paradise"
  ],
  "author": "Muhammet DAG",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.6.0",
    "discord-rpc": "^4.0.1",
    "dotenv": "^16.3.1",
    "edge-js": "^24.0.4",
    "fs-extra": "^11.1.1",
    "node-unrar-js": "^2.0.2",
    "uuid": "^11.1.0",
    "yauzl": "^2.10.0",
    "yauzl-promise": "^2.1.3"
  },
  "build": {
    "appId": "com.muhammetdag.paradise-steam-library",
    "productName": "Paradise Steam Library",
    "icon": "src/icons/icon.ico",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/icons/icon.ico"
   },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
